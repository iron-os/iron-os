@import defaults

*
	@core

pre
	background-color: #eee
	padding: 10px

@full
	@absolute
	top: 0
	left: 0
	width: 100%
	height: 100%

main
	@full

// install page
#install-page
	padding: 10px

	.disk
		margin-bottom: 20px

	a
		display: inline-block
		padding: 5px 10px
		color: #fff
		background-color: #fd4141
		text-decoration: none

#landing-page
	@full

	+.loading p
		@absolute
		bottom: 10px
		right: 10px

	iframe
		@full
		outline: none
		border: none